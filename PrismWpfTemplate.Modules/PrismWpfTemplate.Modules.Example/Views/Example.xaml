<UserControl x:ClassModifier="internal" x:Class="PrismWpfTemplate.Modules.Example.Views.Example"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PrismWpfTemplate.Modules.Example.Views"
             xmlns:viewModels="clr-namespace:PrismWpfTemplate.Modules.Example.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModels:ExampleViewModel}">
    <Grid>
        <TextBlock Text="{Binding Message}" FontSize="16"/>
    </Grid>
</UserControl>
